extends layout

block content
  .error-page
    .puppy-box
      - console.log('STA', errorObj)
      h1= errorObj.status
      h2= errorObj.errMsg
      //- only show trace in dev
      if process.env.NODE_ENV == 'development'
        if errorObj.stack == typeof 'function'
          pre #{errorObj.stack()}
        else
          pre #{errorObj.stack}
      else
        each imgObj in imgObjs
          picture
            source(media=`(max-width: 638px)` srcset=`${imgObj.sm}`)
            source(media=`(max-width: 725px)` srcset=`${imgObj.md}`)
            source(media=`(max-width:853px)` srcset=`${imgObj.lg}`)
            source(media=`(max-width:1100px)` srcset=`${imgObj.fs}`) 
            img.image(src=`${imgObj.lg}` alt=`A dog`)