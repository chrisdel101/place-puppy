extends layout

block content
    div.reset-container
        div.col-md-6.col-md-offset-3  
        h2.display-4.m-b-2 Reset Password
        - if(messages.success)
            div.message.success.alert.alert-success
                span= messages.success
        - else if(messages.info)
            div.message.info.alert.alert-info
                span= messages.info
        - else if(messages.error)
            div.message.error.alert.alert-danger
                span= messages.error
        include _form.pug
